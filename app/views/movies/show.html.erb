<h1><%= @movie.title %> Show Page </h1>
<p><%=  @movie.creation_year%></p>
<p><%=  @movie.genre%></p>
<p><%= @movie.actors.ordered_by_age.join(", ") %></p>
<p>Average Age: <%= @movie.actors.average_age %>

<% @movie.actors.each do |actor| %>
  <p><%= actor.name %></p>
  <p><%= actor.age %></p>
<% end %>

<h4>Add an Actor Form</h4>
<%= form_with url: "/movies/#{@movie.id}", method: :post, data: {turbo: false} do |form| %>
  <%= form.label :actor_id, "Actor ID:" %>
  <%= form.text_field :actor_id %>
  <%= form.submit "Add Actor" %>
<% end %>